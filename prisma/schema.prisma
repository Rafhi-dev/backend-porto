generator client {
  provider = "prisma-client"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int       @id @default(autoincrement())
  nama      String
  username  String    @unique @default(uuid())
  email     String    @unique
  password  String
  createAt  DateTime  @default(now())
  deletedAt DateTime?
}

model hero {
  id       Int     @id @default(autoincrement())
  title    String
  subTitle String

  pageIndex pageIndex?
}

model about {
  id      Int     @id @default(autoincrement())
  tentang String
  foto    String

  pedidikan pendidikan[]

  pageindex pageIndex?
}

model pendidikan {
  id      Int    @id @default(autoincrement())
  sekolah String
  jurusan String
  ipk     Float

  about   about @relation(fields: [aboutId], references: [id])
  aboutId Int
}

model pengalaman {
  id            Int     @id @default(autoincrement())
  jabatan       String
  perushaan     String
  tahun_mulai   String
  tahun_selesai String

  pageIndexId Int?
  pageIndex   pageIndex? @relation(fields: [pageIndexId], references: [id])

  jobdesk jobdesk[]
}

model jobdesk {
  id        Int    @id @default(autoincrement())
  deskripsi String

  pengalamanId Int
  pengalaman   pengalaman @relation(fields: [pengalamanId], references: [id])
}

model skill {
  id        Int    @id @default(autoincrement())
  icon      String
  namaSkill String

  pageIndexId Int?
  pageIndex   pageIndex? @relation(fields: [pageIndexId], references: [id])
}

model proyek {
  id        Int     @id @default(autoincrement())
  gambar    String
  deskripsi String
  urlProf   String?
  status    String?

  pageindexId Int?
  pageIndex   pageIndex? @relation(fields: [pageindexId], references: [id])
}

model sosialMedia {
  id     Int    @id @default(autoincrement())
  sosmed sosmed
  url    String
}

enum sosmed {
  facebook
  linkedin
  instagram
  thread
  github
  fiverr
  fastwork
}

model pageIndex {
  id      Int     @id @default(autoincrement())
  heroId  Int     @unique
  aboutId Int     @unique
  aktif  Boolean @default(false)

  hero hero @relation(fields: [heroId], references: [id])

  about about @relation(fields: [aboutId], references: [id])

  pengalaman pengalaman[]
  skill      skill[]
  proyek     proyek[]
}
